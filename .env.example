# Environment Variables Template
# Copy this to .env and fill in your values

##############################################
#         REQUIRED - Must Configure
##############################################

# Google Gemini API Key (get from https://aistudio.google.com)
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Django Secret Key (generate a new one for production)
SECRET_KEY=django-insecure-tf^7iv2hj0#&a0vp!@064cid2p%w-sp3e2o6(f*013c2oi0!y%

##############################################
#         Django Settings
##############################################

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

##############################################
#         Database Configuration
##############################################

# SQLite (default - development only)
# Leave as is or use:
# DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (production recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/fitflow_db

##############################################
#         Cache & Message Queue (Optional)
##############################################

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

##############################################
#         Email Configuration (Optional)
##############################################

# Email backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Gmail SMTP
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password

##############################################
#         CORS Configuration
##############################################

# Frontend URLs
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

##############################################
#         Gemini Model Settings (Optional)
##############################################

# Model version
GEMINI_MODEL=gemini-2.5-flash

# Temperature (0 = deterministic, 1 = creative)
GEMINI_TEMPERATURE=0.7

# Max tokens per response
GEMINI_MAX_TOKENS=2048

##############################################
#         Application Settings (Optional)
##############################################

# Language
LANGUAGE_CODE=en-us

# Timezone
TIME_ZONE=UTC

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
